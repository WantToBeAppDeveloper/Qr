<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_results"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.qrcodescanner.ResultsActivity">

    <ImageView
        android:id="@+id/result_of_scan"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        />


    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Назад"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/result_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_above="@+id/continScan_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результат"
        android:textSize="20dp"
        android:layout_above="@+id/result_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="1dp" />

    <Button
        android:id="@+id/continCam_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Продолжить съемку"
        android:layout_alignBottom="@+id/continScan_btn"
        android:layout_toRightOf="@+id/back_btn"
        android:layout_toEndOf="@+id/back_btn" />

    <Button
        android:text="Продолжить сканирование"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/continScan_btn"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/back_btn"
        android:layout_toLeftOf="@+id/continCam_btn"
        android:layout_toStartOf="@+id/continCam_btn"
        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp" />

</RelativeLayout>